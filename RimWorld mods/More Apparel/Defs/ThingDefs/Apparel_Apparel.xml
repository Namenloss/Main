<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>


  <ThingDef ParentName="ApparelMakeableBase">
    <defName>CargoPants</defName>
    <label>corgo pants</label>
    <description>A simple set of cargo pants.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Various/Pants_OnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>55</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
      <Insulation_Cold>-3</Insulation_Cold>
    </statBases>
	<equippedStatOffsets>
		<WorkSpeedGlobal>0.05</WorkSpeedGlobal>
		<CarryingCapacity>10</CarryingCapacity>
	</equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <commonality>1</commonality>
      <tags>
        <li>Outlander</li>
        <li>Spacer</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>




